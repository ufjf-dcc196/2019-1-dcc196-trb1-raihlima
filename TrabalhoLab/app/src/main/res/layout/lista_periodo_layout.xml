                android:layout_weight="2"
                android:text="XXX"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/HumanidadesHorasParciaisTxtPeriodoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="XXX"
                android:textAlignment="center" />

        </TableRow>
    </TableLayout>

</LinearLayout>
